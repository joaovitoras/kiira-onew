<% @page_title = "Home" %>

<% content_for :head do %>
  <title><%= "Kiira Onew Home" %></title>
  <meta property="og:title" content="Kiira Onew"/>
  <meta property="og:type" content="website"/>
  <meta property="og:url" content=<%= request.original_url %>/>
  <meta property="og:description" content="Site uahSUAhsuhauSHUA"/>
  <meta property="og:image" content=<%= @galleries.first.drawings.first.image_url(:drawings)%>/>
<% end %>

 <div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">My Jobs - Galleries <i class="fa fa-picture-o"></i></h1>
  </div>
</div>
<div class="row">

  <% @galleries.each do | gallery | %>
    <div class="col-md-4 portfolio-item">
      <div class="box-image">
        <a href=<%= gallery_path(gallery) %>>
          <%= image_tag(gallery.image_url(:home), class: "img-responsive" ) if gallery.image? %>
        </a>
        <h4><%= link_to gallery.name, gallery_path(gallery)%> <%= tag("i", class: "fa fa-external-link")%></i> <i class="fa fa-picture-o right"> <%= gallery.drawings.count %></i>
        </h4>
        <p class="description"> fa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o right <i class="fa fa-info-circle right-bottom"></i></p>
    </div>
  </div>
  <% end %>
</div>