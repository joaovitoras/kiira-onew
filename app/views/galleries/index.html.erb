<% @page_title = "Home" %>
         <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">My Jobs - Galleries <i class="fa fa-picture-o"></i></h1>
          </div>
        </div>
        <div class="row">

          <% @galleries.each do | gallery | %>
            <div class="col-md-4 portfolio-item">
              <div class="box-image">
                <a href=<%= gallery_path(gallery) %>>
                  <%= image_tag(gallery.image_url(:home), class: "img-responsive" ) if gallery.image? %>
                </a>
                <h4><a href="#" > <%= link_to gallery.name, gallery_path(gallery)%> <%= tag("i", class: "fa fa-external-link")%></i> <i class="fa fa-picture-o right"> <%= gallery.drawings.count %></i></a>
                </h4>
                <p class="description"> fa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o right <i class="fa fa-info-circle right-bottom"></i></p>
            </div>
          </div>
          <% end %>
        </div>