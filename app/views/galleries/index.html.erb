<% @page_title = "Home" %>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Meus trabalhos - Galerias <i class="fa fa-picture-o"></i></h1>
    </div>
</div>
<div class="row">
    <% @galleries.each do | gallery | %>
        <div class="col-md-4 portfolio-item">
            <div class="box-image">
                <%= link_to gallery_path(gallery), class: "link-not-decorate" do %> 
                    <%= image_tag(gallery.image_url(:home), class: "img-responsive" ) if gallery.image? %>
                    <h4 class="text-primary"><%=gallery.name%><i class="fa fa-picture-o right">
                    <%= gallery.drawings.count %></i></h4>
                <p class="description"> fa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o rightfa fa-picture-o right</p>
                <%end%>
            </div>
        </div>
    <%end%>
</div>