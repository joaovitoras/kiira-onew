<% @page_title = "Home" %>

<% content_for :head do %>
    <meta property="og:url" content="<%= url(request.path) %>">
    <meta property="og:title" content="Kiira Onew - Digital Art">
    <meta property="og:site_name" content="Kiira Onew Designer">
    <meta property="og:description" content="Kiira Onew, artes e ilustrações feitos digitalmente">
    <meta property="og:image" content="http://fc05.deviantart.net/fs70/f/2014/179/f/5/profile_picture_by_kiiraonew-d7oc0ap.jpg">
    <meta property="og:image:type" content="image/jpg">
    <meta property="og:image:width" content="800">
    <meta property="og:image:height" content="600">
    <meta property="og:type" content="website">
    <meta property="fb:app_id" content="653396958070822">
<% end %>

<div class="container">
    <% flash.each do |name, msg| -%>
      <%= content_tag :div, class: "alert alert-#{name} alert-dismissible", role: "alert" do -%>
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <%= msg %>
      <% end %>  
    <% end -%>

    <%= render 'partials/hero' %>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Meus trabalhos - Galerias <i class="fa fa-picture-o"></i></h1>
        </div>
    </div>

    <div class="row">
        <% @galleries.each do | gallery | %>
            <div class="col-md-4 portfolio-item">
                <div class="box-image">
                    <%= link_to gallery_path(gallery), class: "link-not-decorate" do %> 
                        <%= image_tag(gallery.image_url(:home), class: "img-responsive" ) if gallery.image? %>
                        <h4 class="text-primary"><%=gallery.name%><i class="fa fa-picture-o right">
                        <%= gallery.drawings.count %></i></h4>
                    <%end%>
                </div>
            </div>
        <%end%>
    </div>

    <%= render 'partials/sales'%>
    <%= render 'partials/infos_about'%>
    <%= render 'partials/contact_me'%>
</div>