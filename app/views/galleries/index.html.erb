<% @page_title = "Home" %>
         <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">My Jobs - Galleries <i class="fa fa-picture-o"></i></h1>
          </div>
        </div>
        <div class="row">

          <% @galleries.each do | gallery | %>
            <div class="col-md-4 portfolio-item">
                <a href=<%= gallery_path(gallery) %>>
                  <%= image_tag(gallery.drawings.first.image_url, class: "img-responsive", ) %>
                </a>
                <h3><a href"#" > <%= link_to gallery.name, gallery_path(gallery) %></a>
                </h3>
                <p> <%= gallery.description %></p>
            </div>
          <% end %>
        </div>