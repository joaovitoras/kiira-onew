<% content_for :head do %>
   <meta property="og:site_name" content="Kiira Onew - Digital Art">
   <meta property="fb:app_id" content="653396958070822">
   <meta property="og:image" content="<%= @gallery.image_url %>">
   <meta property="og:url" content="<%= request.original_url %>">
   <meta property="og:title" content="<%= "Kiira Onew - Galeria #{@gallery.name}" %>">
   <meta property="og:description" content="<%= @gallery.description %>">
   <meta itemprop="name" content="<%= "Kiira Onew - Galeria #{@gallery.name}" %>">
   <meta itemprop="description" content="<%= @gallery.description %>">
   <meta itemprop="image" content="<%= @gallery.image_url %>">
<% end %>
<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header" style="margin-top: 0px;">Ilustrações - <%= @gallery.name.capitalize %> <i class="fa fa-picture-o"></i>
    <ul class="pagination pull-right" style="margin: 0px">
            <li><a href="#"style="background-color: inherit;font-size: 28px;color: white;padding-left: 0px;" ><i class="fa fa-share-alt"></i></a></li>
            <li><a href="#" onClick="<%= "window.open('http://www.pinterest.com/pin/create/bookmarklet/?media=#{@gallery.image_url}&url=#{request.original_url}&is_video=false&description=#{@gallery.name}','sharer','toolbar=0,status=0,width=580,height=325');"%>" style="background-color: inherit;font-size: 28px;color: #cb2027;padding-left: 0px;" ><i class="fa fa-pinterest"></i></a></li>
            <li><a href="#" onClick="<%= "window.open('http://www.facebook.com/share.php?u=#{request.original_url}','sharer','toolbar=0,status=0,width=580,height=325');"%>" style="background-color: inherit;font-size: 28px;color: #3B5998" ><i class="fa fa-facebook"></i></a></li>
            <li><a href="#" onClick="<%= "window.open('https://plus.google.com/share?url=#{request.original_url}','sharer','toolbar=0,status=0,width=580,height=325');"%>" style="background-color: inherit;font-size: 28px;color: #dd4b39" ><i class="fa fa-google-plus"></i></a></li>
            <li><a href="#" onClick="<%= "window.open('https://twitter.com/intent/tweet?hashtags=MakeArt%2C&original_referer=#{request.original_url}%2F&text=Gostei%20da%20ilustração%20#{@gallery.name}%20feita%20por%20@kiira_Onew%20-%20O%20Kiira%20Onew&tw_p=tweetbutton&url=#{request.original_url}&via=kiira_Onew','sharer','toolbar=0,status=0,width=580,height=325');"%>" style="background-color: inherit;font-size: 28px;color: #00A0D1" ><i class="fa fa-twitter"></i></a></li>
            <li><a href="#" onClick="window.open('http://www.tumblr.com/share/photo?source=<%=u @gallery.image_url %>&caption=<%=u "#{link_to @gallery.name, gallery_path(@gallery)} by #{link_to "Kiira Onew", "http://kiiraonew.deviantart.com"} "%>&clickthru=<%=u request.original_url %>','sharer','toolbar=0,status=0,width=580,height=325');" style="background-color: inherit;font-size: 28px;color: #32506d" ><i class="fa fa-tumblr"></i></a></li>
          </ul></h1>
    </div>
</div>
<div class="row">
   <% @gallery.drawings.paginate(:page => params[:page]).each do | drawing | %>
  <div class="col-md-3 col-xs-6 portfolio-item ">
    <div class="box-image pagination-centered">
       <%= link_to gallery_drawing_path(@gallery,drawing), class: "link-not-decorate" do %>
          <%= image_tag(drawing.image_url(:thumb), size: "260x187",class: "img-thumbnail img-responsive" )  if drawing.image?  %>
          <h4><%= drawing.name %><%= tag("i", class: "fa fa-external-link")%> </i></h4>
        <%end%>
    </div>
   </div>
   <% end %>
</div>
<div class="row pagination-centered">
    <%= will_paginate @gallery.drawings.paginate(:page => params[:page]), renderer: BootstrapPagination::Rails %>
</div>
<div class="box-image">
    <div class="row"style="padding-left: 15px;">
        <div class="col-xs-4 column">
            <h3 class="text-info">Informações <i class="fa fa-info"></i></h2>
                <ul class="nav">
                    <li><p style="background-color: inherit;font-size: 14px;"><%=@gallery.description%></p style="background-color: inherit;font-size: 14px;"></li>
                </ul>
        </div>
        
        <div class="col-xs-8 column">
          <img src="http://placehold.it/728x90)">
        </div>
    </div>
</div>