<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <h1 class="text-center login-title">Forgot your password?</h1>
               	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {:method => :post, class: 'form-signin'}) do |f| %>
               		<%= devise_error_messages! %>
					<%= f.email_field :email, autofocus: true, type: "text", class: "form-control", placeholder: "Email" %>
					<%= f.submit "Send me instructions", class: "btn btn-lg btn-primary btn-block" %>
					<%= render "devise/shared/links" %>	
				<% end %>
			</div>
		</div>
	</div>		
</div>
