<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <h1 class="text-center login-title">Sing in to continue to</h1>
            	<h1 class="text-center login-title">Kiira Onew Admin</h1>
               	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
					<%= f.email_field :email, autofocus: true, type: "text", class: "form-control", placeholder: "Email" %>
					<%= f.password_field :password,type: "password", class: "form-control", placeholder: "Password" %>
					<%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
					<% if devise_mapping.rememberable? %>
		 			 	<div class="login-title"><%= f.check_box :remember_me %> <%= f.label :remember_me%></div>
					<% end %>

					<%= render "devise/shared/links" %>	
				<% end %>
			</div>
		</div>
	</div>		
</div>
