<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1 id="forms">Á venda <i class="fa fa-send"></i></h1>
    </div>
  </div>
</div>
<% Sale.all.each do |sale| %>
	<div class="container">
	    <div class="row">
	        <div class="col-md-4">
	            <div class="panel panel-danger">
	                <div class="panel-heading">
	                    <h4 class="text-center">
	                        <%= sale.name %></h4>
	                </div>
	                <div class="panel-body text-center">
	                    <p class="lead">
	                        <strong>Preços á partir de R$ <%= sale.starting %></strong></p>
	                </div>
	                <div class="panel-footer">
	                    <a class="btn btn-lg btn-block btn-danger" href="<%= sale_path(sale)%>"></a>
	                </div>
	            </div>
	        </div>
	    </div>
	</div>
<% end %>