<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1 id="forms">Entre em contato <i class="fa fa-send"></i></h1>
    </div>
  </div>
</div>
<div class="row">
    <div class="col-md-8">
        <%= form_tag send_mail_path, validate: true,  html: {class: "form"} do |f| %>                
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <%= text_field_tag :name, nil, placeholder: "Informe seu nome", class: "form-control", :required => true %>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">@</span>
                            <%= text_field_tag :email, nil,  placeholder: "Informe seu email", class: "form-control", :required => true, type: "email" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-book"></i></span>
                            <%= text_field_tag :subject, nil,  placeholder: "Assunto", class: "form-control", :required => true, type: "text" %>
                        </div>
                    </div>
                </div>
                <div class="col-md-6" style="border-right: 1px solid #4e5d6c;">
                    <div class="form-group">
                        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Por favor escreva sua mensagem aqui...", rows: "3", :required => true %>
                    </div>
                    <%= submit_tag "Enviar Mensagem", class: "btn btn-primary pull-right", style: "background-color:rgba(223,105,26,0.8);" %>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col-md-4">
        <legend style="margin-bottom: 0px;"><i class="fa fa-globe"> Encontre-me</i></legend>
        <ul class="fa-ul">
          <li><h4><i class="fa-li fa fa-envelope"></i>kiira_onew@gmail.com</h4></li>
          <li><h4><i class="fa-li fa fa-phone"></i>+55 12 98274-7616</h4></li>
          <li><h4><i class="fa-li fa fa-skype"></i><a href="skype:kiira_onew?userinfo" style="color:white">Kirra Onew</a></h4></li>
        </ul>
    </div>
  </div>