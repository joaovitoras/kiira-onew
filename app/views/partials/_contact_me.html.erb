      <div class="col-md-6">
        <%= form_tag send_mail_path, html: {class: "form-horizontal"} do |f| %>
          <fieldset>
    
            <!-- Name input-->
            <div class="form-group">
              <label class="col-md-3 control-label" for="name">Nome</label>
              <div class="col-md-9">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <%= text_field_tag :name, nil, placeholder: "Seu nome", class: "form-control" %>
              </div>
              </div>
            </div></br></br>
                
            <!-- Email input-->
            <div class="form-group">
              <label class="col-md-3 control-label" for="email">Seu E-mail</label>
              <div class="col-md-9">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <%= text_field_tag :email, nil,  placeholder: "Seu Email", class: "form-control" %>
              </div>
              </div>
            </div></br></br>
    
            <!-- Message body -->
            <div class="form-group">
              <label class="col-md-3 control-label" for="message">Sua mensagem</label>
              <div class="col-md-9">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-code"></i></span>
                <%= text_area_tag :message, nil, placeholder: "Seu nome", class: "form-control", placeholder: "Por favor escreva sua mensagem aqui...", rows: "5" %>
              </div>
              </div>
            </div>
    
            <!-- Form actions -->
            <div class="form-group">
              <div class="col-md-12 text-right">
                  <%= submit_tag "Enviar", class: "btn btn-primary btn-lg", style: "background-color:rgba(223,105,26,0.6);" %>
              </div>
            </div>
          </fieldset>
        <% end %>
